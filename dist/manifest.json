{
  "manifest_version": 3,
  "name": "SimpleHold",
  "version": "1.26.0",
  "icons": {
    "16": "favicon-16.png",
    "32": "favicon-32.png",
    "48": "favicon-48.png",
    "128": "favicon-128.png"
  },
  "description": "Light wallet for Bitcoin and other cryptocurrencies.",
  "homepage_url": "https://simplehold.io",
  "short_name": "SimpleHold",
  "permissions": [
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "cookies",
    "scripting",
    "storage",
    "alarms"
  ],
  "action": {
    "default_icon": {
      "16": "favicon-16.png",
      "32": "favicon-32.png",
      "48": "favicon-48.png",
      "128": "favicon-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "SimpleHold"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://simpleswap.io/*",
        "https://simplehold.io/*",
        "https://swapspace.co/*",
        "http://localhost/*"
      ],
      "js": ["js/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/inpage.js",
        "js/selectAddress.js",
        "select-address.html",
        "js/contentScript.js",
        "js/send.js",
        "send.html"
      ],
      "matches": [
        "https://simpleswap.io/*",
        "https://simplehold.io/*",
        "https://swapspace.co/*",
        "http://localhost/*"
      ]
    }
  ],
  "host_permissions": ["*://*.simplehold.io/*", "*://*.simpleswap.io/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
