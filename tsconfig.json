{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist/js",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["assets/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@config/*": ["src/config/*"],
      "@drawers/*": ["src/drawers/*"],
      "@contexts/*": ["src/contexts/*"],
      "@containers/*": ["src/containers/*"],
      "@shared/*": ["src/shared/*"],
      "@coins/*": ["src/coins/*"],
      "@tokens/*": ["src/tokens/*"],
      "@store/*": ["src/store/*"]
    }
  }
}
