{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "react": [
        "node_modules/preact/compat/"
      ],
      "react-dom": [
        "node_modules/preact/compat/"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}