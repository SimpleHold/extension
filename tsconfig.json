{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "declaration": false,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["assets/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@config/*": ["src/config/*"],
      "@drawers/*": ["src/drawers/*"],
      "@contexts/*": ["src/contexts/*"],
      "@containers/*": ["src/containers/*"],
      "@shared/*": ["src/shared/*"],
      "@coins/*": ["src/coins/*"],
      "@tokens/*": ["src/tokens/*"]
    }
  },
  "include": ["src", "@types", "webpack.config.js"]
}
